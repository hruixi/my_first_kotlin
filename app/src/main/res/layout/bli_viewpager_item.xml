<?xml version="1.0" encoding="utf-8"?>
<com.rain.mykotlin.view.customize.bli3D.BliLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/bli_img"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/bli_share"
            style="@style/Bli_bottom_text_style"
            app:drawableTopCompat="@mipmap/icon_shared"/>
        <TextView
            android:id="@+id/bli_like"
            style="@style/Bli_bottom_text_style"
            app:drawableTopCompat="@mipmap/icon_like"/>
        <TextView
            android:id="@+id/bli_comment"
            style="@style/Bli_bottom_text_style"
            app:drawableTopCompat="@mipmap/icon_comment"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</com.rain.mykotlin.view.customize.bli3D.BliLayout>